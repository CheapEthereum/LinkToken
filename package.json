{
  "name": "@chainlink/token",
  "homepage": "https://github.com/smartcontractkit/LinkToken",
  "repository": "https://github.com/smartcontractkit/LinkToken",
  "version": "0.1.0",
  "license": "MIT",
  "authors": [
    "Steve Ellis <steve@smartcontract.com>"
  ],
  "files": [
    "README.md",
    "contracts"
  ],
  "scripts": {
    "clean": "tsc -b --clean tsconfig.test.json && rm -rf build/",
    "compile": "belt compile all",
    "compile:ovm": "yarn belt compile all-ovm --config app.config.ovm.json",
    "compile:clean": "yarn clean & yarn compile",
    "compile:clean:ovm": "yarn clean & yarn compile:ovm",
    "setup": "yarn clean & yarn compile & yarn compile:ovm",
    "test": "env USE_OVM=false jest --testTimeout 80000 --forceExit --detectOpenHandles",
    "test:ovm": "env USE_OVM=true jest --testTimeout 80000 --forceExit --detectOpenHandles --testRegex 'test/.*v0.7/.*.(spec|test).(js|ts)?$'",
    "postinstall": "patch-package",
    "deposit-withdraw": "ts-node scripts/deposit-withdraw.ts"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.1.6",
    "@openzeppelin/contracts": "^3.4.0",
    "@eth-optimism/contracts": "^0.1.10",
    "@eth-optimism/watcher": "^0.0.1-alpha.9",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@chainlink/belt": "^0.0.4",
    "@chainlink/test-helpers": "^0.0.6",
    "@types/jest": "^26.0.8",
    "@types/node": "^13.9.1",
    "jest": "^26.6.3",
    "jest-circus": "^25.1.0",
    "moment": "^2.15.2",
    "patch-package": "^6.4.6",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^26.5.3",
    "typescript": "^3.9.7"
  },
  "resolutions": {
    "**/ethers": "4.0.45"
  }
}
